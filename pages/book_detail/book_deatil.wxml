<view>
  <van-row>
    <van-col span="24">
      <van-row>
        <van-col span="24">
          <van-image width="100%" height="200px" fit="contain" src="{{ bookImageUrl }}" />
        </van-col>
      </van-row>
      <van-row>
        <van-cell-group>
          <van-cell title="书名" value="{{ bookName }}" icon="orders-o" />
          <van-cell title="ISBN" value="{{ bookIsbn }}" icon="bookmark-o" />
          <van-cell title="书籍类别" value="{{ bookCatalogName }}" icon="coupon-o" />
          <van-cell title="最大共享天数" value="{{ bookMaxPeriod }}" icon="clock-o" />
          <van-cell title="所需押金" value="{{ bookDeposit }}" icon="balance-o" />
          <van-cell title="共享者" value="{{ userFullName }}" icon="user-o" />
          <van-cell title="书籍详情" value="{{ bookDescription }}" icon="description" />
        </van-cell-group>
      </van-row>
    </van-col>
  </van-row>

  <van-row>
    <van-col span="24">
      <van-goods-action>
        <van-goods-action-icon icon="chat-o" text="客服" bind:click="onClickIcon" />
        <van-goods-action-icon icon="send-gift-o" text="书箱" bind:click="onClickIcon" />
        <van-goods-action-button text="加入书箱" type="warning" bind:click="onClickButton" />
        <van-goods-action-button text="立即借阅" bind:click="borrowBook" wx:if="{{ !borrowLoading }}"/>
        <van-goods-action-button loading wx:if="{{ borrowLoading }}"/>
      </van-goods-action>
    </van-col>
  </van-row>
  <van-toast id="van-toast" />
</view>