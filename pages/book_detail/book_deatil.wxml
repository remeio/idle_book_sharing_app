      <van-row>
        <van-col span="24">
          <van-image width="100%" height="280px" fit="contain" src="/resources/images/1.jpg" />
        </van-col>
      </van-row>
      <van-row>
        <van-cell-group>
          <van-cell title="书名" value="世界文明" icon="orders-o"/>
          <van-cell title="ISBN" value="1545455" icon="bookmark-o"/>
