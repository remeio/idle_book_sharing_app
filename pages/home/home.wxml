<vant-row>
  <vant-col span="24">
    <!-- 搜索框 -->
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" use-action-slot use-right-icon-slot shape="round">
      <view slot="action" class="view-center">
        <van-icon name="scan" size="24px" bind:tap="openUploadBookAction" />
      </view>
    </van-search>
    <van-tabs sticky>
      <van-tab title="首页">内容 1</van-tab>
      <van-tab title="推荐">推荐</van-tab>
      <van-tab title="小说"></van-tab>
      <van-tab title="计算机">内容 4</van-tab>
      <van-tab title="教材">内容 2</van-tab>
      <van-tab title="计算机">内容 2</van-tab>
    </van-tabs>
  </vant-col>
</vant-row>
<!-- 上传书籍弹出框 -->
<van-action-sheet
  show="{{ uploadBookShow }}"
  actions="{{ uploadBookActionList }}"
  bind:close="uploadBookActionOnClose"
  bind:select="uploadBookActionOnSelect"
  bind:cancel="uploadBookActionOnClose"
  cancel-text="取消"
  description="共享书籍"
/>