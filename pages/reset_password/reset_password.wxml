<view>
  <van-row>
    <van-col span="24">
      <view class="view-center">
        <van-image fit="heightFix" height="140" src="http://115.29.198.114:9090/system/password.png" />
      </view>
    </van-col>
  </van-row>
  <van-row>
    <van-col span="24">
      <van-cell-group>
        <van-field model:value="{{ userPassword }}" label="当前密码" placeholder="请输入当前密码" left-icon="closed-eye" required type="password" />
        <van-field model:value="{{ userNewPassword }}" label="新密码" placeholder="请输入新密码" left-icon="closed-eye" required
          type="password" />
      </van-cell-group>
    </van-col>
  </van-row>
  <van-row style="margin: 12px">
    <van-col span="22" offset="1">
      <van-button round type="danger" color="#9FC3FD" block loading disabled loading-text="修改密码中..." wx:if="{{ loading }}">修改密码中</van-button>
      <van-button round type="danger" color="linear-gradient(to bottom right, #342DEC, #9FC3FD)" block bind:click="resetPassword" wx:if="{{ !loading }}">修改密码</van-button>
    </van-col>
  </van-row>
  <van-toast id="van-toast" />
</view>