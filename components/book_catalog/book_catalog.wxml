<view>
  <view style="float: left; width: 80px;">
    <van-sidebar active-key="{{ bookCatalogIndex }}">
      <van-sidebar-item title="{{ item }}" wx:for="{{ bookCatalogNames }}" />
    </van-sidebar>
  </view>
  <view style="float: right; width: calc(100% - 80px);">
    <van-row>
      <van-col span="24">
        <van-grid column-num="2" border="{{ false }}" gutter="{{ 0 }}">
          <van-grid-item use-slot wx:for="{{ 3 }}" wx:for-item="index">
            <van-row style="width: 100%" bind:tap="toBookDetail" data-id="{{ index }}">
              <van-col span="24">
                <van-row>
                  <van-col span="24">
                    <van-image width="100%" height="120px" fit="contain" src="/resources/images/{{ index + 1 }}.jpg" />
                  </van-col>
                </van-row>
                <van-row>
                  <van-col span="24">
                    <text style="color: #323233; font-size: 14px">世界文明{{index}}</text>
                  </van-col>
                </van-row>
                <van-row>
                  <van-col span="16">
                    <van-tag type="primary" round plain>免押金</van-tag>
                    <van-tag type="danger" round plain style="margin-left: 4px">T+7</van-tag>
                  </van-col>
                </van-row>
              </van-col>
            </van-row>
          </van-grid-item>
        </van-grid>
      </van-col>
    </van-row>
  </view>
</view>